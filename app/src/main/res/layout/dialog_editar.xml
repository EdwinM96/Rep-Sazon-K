<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="center"
        android:text="@string/edit_indicacion_img"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:id="@+id/imgview_editar"
        app:civ_border_width="1dp"
        android:layout_marginTop="16dp"
        app:civ_border_color="#ffffff"
        android:src="@drawable/rs_ic"
        android:layout_height="100dp"/>


    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="true"/>

    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/et_nombre_editar"
        android:fontFamily="sans-serif-condensed"
        android:hint="Nombre de usuario"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColorHint="@color/colorAccent"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:textColor="#000000"
        android:background="@drawable/et_shape"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número telefónico"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="true"/>

    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/et_phone_editar"
        android:fontFamily="sans-serif-condensed"
        android:hint="Número telefónico"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColorHint="@color/colorAccent"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:textColor="#000000"
        android:inputType="phone"
        android:background="@drawable/et_shape"/>




</LinearLayout>
</ScrollView>